<h1>All our flats</h1>
<p>Find me in app/views/flats/index.html.erb</p>

<p id="notice"><%= notice %></p>

<table>
  <tbody>
      <% @flats.each do |flat| %>
        <tr>
          <td><%= flat.name %></td>
          <td><%= flat.address %></td>
          <td><%= flat.description %></td>
          <td><%= flat.price_per_night %></td>
          <td><%= flat.number_of_guests %></td>
          <td><%= link_to 'Show', flat %></td>
          <td><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>

<br>

<%= link_to 'Add flat', new_flat_path %>
